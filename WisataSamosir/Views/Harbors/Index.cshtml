
@{
    ViewData["Title"] = "dashboard";
    Layout = "_Layout";
}
<div class="col-lg-12">
    <button type="button" class="btn btn-primary mt-2 mb-2 pl-5 pr-5" onclick="ModalAddHarbor()">Add Harbor</button>
</div>
<div class="container mt-5 p-2 border">
    <table class="table table-striped table-hover" id="dataTable">
        <thead>
            <tr>
                <td></td>
                <td>Name</td>
                <td>Location</td>
                <td>Description</td>
                <td>Action</td>
            </tr>
        </thead>

    </table>
</div>

<div class="modal" tabindex="-1" role="dialog" id="harbor">
    <div class="modal-dialog modal-lg" role="document">
        <form id="form_harbor">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" name="name" id="name" placeholder="Name" />
                                <input type="hidden" class="form-control" name="id" id="id" />
                                <div class="invalid-feedback" id="message_name">

                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>location</label>
                                <input type="text" class="form-control" name="location" id="location" placeholder="Location" />
                                <div class="invalid-feedback" id="message_location">

                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 password">
                            <div class="form-group">
                                <label>Description</label>
                                <input type="text" class="form-control" name="description" id="description" placeholder="Description" />
                                <div class="invalid-feedback" id="message_description">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="button" id="SubmitInsert" onclick="SubmitAddHarbor()">Add Harbor</button>
                    <button class="btn btn-primary" type="button" id="SubmitUpdate" onclick="SubmitUpdateHarbor()">Update</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>


</div>
@section Scripts{
    <script src="~/harbor/index.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=false&key=AIzaSyBF2ZTrnHd5ko_mQitE9kWiy2TWe-1X-3g&libraries=places"></script>
    <script type="text/javascript">
    </script>
}